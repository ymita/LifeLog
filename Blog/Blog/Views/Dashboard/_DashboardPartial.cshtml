<!-- Single line list with icons -->
@*https://material.io/icons/*@
@*http://propeller.in/components/list.php*@
<ul class="list-group pmd-z-depth pmd-list pmd-card-list pmd-list-icon">
    <li class="list-group-item">
        <i class="material-icons media-left pmd-sm">list</i>
        <span class="media-body">@Html.ActionLink(@Blog.Resources.BlogResources.Create, "Create", "Dashboard")</span>
    </li>
    <li class="list-group-item">
        <i class="material-icons media-left pmd-sm">create</i>
        <span class="media-body">@Html.ActionLink(@Blog.Resources.BlogResources.AllPosts, "AllPosts", "Dashboard")</span>
        @{
            List<Blog.Models.Post> posts = this.Model as List<Blog.Models.Post>;
            if (posts != null && posts.Count > 0)
            {
                int draftCount = posts.Where(p => p.IsDraft == true).Count();
                int postCount = posts.Where(p => p.IsDraft == false).Count();
                <ul>
                    <li> @Html.ActionLink($"公開済み ({postCount})", "Published", "Dashboard")</li>
                    <li> @Html.ActionLink($"下書き ({postCount})", "Draft", "Dashboard")</li>
                </ul>
            }

        }
    </li>
    <li class="list-group-item">
        <i class="material-icons media-left pmd-sm">settings</i>
        <span class="media-body">@Html.ActionLink(@Blog.Resources.BlogResources.Configuration, "Configuration", "Dashboard")</span>
    </li>
</ul>